<div align="center">
  <div align="center" style="max-width: 1000px;">

    <%= form_with do |form| %>
      <table>
      <tbody>
        <tr>
          <td colspan="4">
            <h3 align="center">Balepa Online</h3>
            <div align="center" style="color:red;">
              <%= form_for :stats do |f_warn| %>
                <% if @warning != '' %>
                  <%= f_warn.label :label_warn, value=@warning %>
                <% else %>
                  <label>&nbsp;</label>
                <% end %>
              <% end %>
            </div>
            <div align="center">
              <br>
              <%= button_to 'New game', 'new_game', {class: 'game-action-button'}%>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="4" align="center">
            <%= button_to 'Save game', 'save_btn', {class: 'game-action-button', :disabled => @is_lose}%>
          </td>
        </tr>
        <tr>
          <td colspan="4" align="center">
            <%= button_to 'Load game', 'load_btn', {class: 'game-action-button'}%>
          </td>
        </tr>
        <tr>
          <td colspan="2"><h4>Balepa's parameters</h4></td>
          <td width="40px"></td>
          <td>
            <h4 align="center">Actions</h4>
            <div style="width: 0px; height: 0px; opacity: 0;">
              <%= button_to '', :disabled => true%>
            </div>
          </td>
        </tr>
        <tr>
          <td>Health:</td>
          <td>
            <progress id='health_progress' class='form-game-progress-stats' max="100" value=<%= @gui_health %>></progress>
            <div class="stats_val">
              <%= form.label :health_value, value=@gui_health %>
            </div>
          </td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go Job', 'go_job', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td>Tired:</td>
          <td>
            <progress class='form-game-progress-stats' max="100" value="<%= @gui_tired %>"></progress>
            <div class="stats_val">
              <%= form.label :tired_value, value=@gui_tired %>
            </div>
          </td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go behold', 'go_behold', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td>Mana:</td>
          <td>
            <progress class='form-game-progress-stats' max="100" value="<%= @gui_mana %>"></progress>
            <div class="stats_val">
              <%= form.label :mana_value, value=@gui_mana %>
            </div>
          </td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Watch series', 'watch_series', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td>Fun:</td>
          <td>
            <progress class='form-game-progress-stats' max="20" value="<%= @gui_funny + 10 %>"></progress>
            <div class="stats_val">
              <%= form.label :funny_value, value=@gui_funny %>
            </div>
          </td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go bar', 'go_bar', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td>Money:</td>
          <td>
            <progress class='form-game-progress-stats' max="1000" value="<%= @gui_money %>"></progress>
            <div class="stats_val">
              <%= form.label :money_value, value=@gui_money %>
            </div>
          </td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go drink', 'go_drink', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go sleep', 'go_sleep', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td width="40px"></td>
          <td>
            <div align="center">
              <%= button_to 'Go sing', 'go_sing', {class: 'game-action-button', :disabled => @is_lose} %>
            </div>
          </td>
        </tr>
        <tr height="40px">
        </tr>
        <tr>
          <td colspan="4">
            <%= link_to :action => 'on_click_button_exit' do %>
              <div align="center"><button class="game-big-button">Exit</button></div>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>

  </div>
</div>
