<script language="javascript">
  function goToGame() {
    document.location.href= "/game"
  }
</script>

<div align="center">
  <div align="center" style="max-width: 1000px;">
    <h3 align='center'>Save game</h3>
    <%= form_with scope: :save_form, url: saves_path, local: true do |f| %>
      <table>
      <tbody>
        <tr align="center">
          <div style="width: 0px; height: 0px; opacity: 0;">
            <%= button_to '', :disabled => true%>
          </div>
          <td><label>Save&nbsp;name:&nbsp;</label></td>
          <td><%= f.text_field :savename, value: "" %></td>
        </tr>
        <tr nowrap>
          <td align="center" colspan="3" nowrap>
            <%= f.submit :submit, value: "Save" %>
            <input type="button" value="Cancel" onClick="goToGame()">
          </td>
        </tr>
      </tbody>
    <% end %>
  </div>
</div>
